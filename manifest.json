{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "搶票柴柴-售票網站篩選器",
  "version": "1.5.4",
  "description": "在售票網站上快速篩選您想要的區域票券",
  "permissions": [
    "storage",
    "activeTab",
    "commands"
  ],
  "host_permissions": [
    "*://*.tixcraft.com/*",
    "*://*.kktix.com/*",
    "*://kktix.com/*",
    "*://*.kktix.cc/*",
    "*://*.ibon.com.tw/*",
    "*://ticket.ibon.com.tw/*",
    "*://orders.ibon.com.tw/*",
    "*://*.cityline.com/*",
    "*://www.cityline.com/*",
    "*://*.ticket.com.tw/*",
    "*://*.ticketplus.com.tw/*",
    "*://*.fami.life/*",
    "*://*.tix.wdragons.com/*",
    "*://*.tix.ctbcsports.com/*",
    "*://*.tix.fubonbraves.com/*",
    "*://*.jkface.net/*",
    "*://*.kham.com.tw/*",
    "*://*.tixcraftweb-pcox.onrender.com/*"
  ],
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "啟用/停用篩選器"
    }
  },
  "content_scripts": [
    {
                           "matches": [
          "*://*.tixcraft.com/*",
          "*://*.kktix.com/*",
          "*://*.kktix.cc/*",
          "*://*.ibon.com.tw/*",
          "*://ticket.ibon.com.tw/*",
          "*://orders.ibon.com.tw/*",
          "*://*.cityline.com/*",
          "*://www.cityline.com/*",
          "*://*.ticket.com.tw/*",
          "*://*.ticketplus.com.tw/*",
          "*://*.fami.life/*",
          "*://*.tix.wdragons.com/*",
          "*://*.tix.ctbcsports.com/*",
          "*://*.tix.fubonbraves.com/*",
          "*://*.jkface.net/*",
          "*://*.kham.com.tw/*",
          "*://*.tixcraftweb-pcox.onrender.com/*"
        ],
      "js": ["content.js"]
    },
    {
      "matches": [
        "*://orders.ibon.com.tw/*",
        "*://ticket.ibon.com.tw/Event/*/*"
      ],
      "js": ["shadowInject.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    },

    {
      "matches": [
        "*://*.tixcraft.com/ticket/area/*",
        "*://*.kktix.com/*",
        "*://*.kktix.cc/*",
        "*://*.ibon.com.tw/*",
        "*://*.cityline.com/*",
        "*://*.ticket.com.tw/*",
        "*://*.ticketplus.com.tw/*",
        "*://*.fami.life/*",
        "*://*.tix.wdragons.com/*",
        "*://*.tix.ctbcsports.com/*",
        "*://*.tix.fubonbraves.com/*",
        "*://*.jkface.net/*",
        "*://*.kham.com.tw/*",
        "*://*.tixcraftweb-pcox.onrender.com/*"
      ],
      "js": ["earlyLoader.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": ["injected.js", "styles.css"],
    "matches": [
      "*://orders.ibon.com.tw/*",
      "*://*.tixcraft.com/*",
      "*://*.kktix.com/*",
      "*://*.kktix.cc/*",
      "*://*.ibon.com.tw/*",
      "*://*.cityline.com/*",
      "*://*.ticket.com.tw/*",
      "*://*.ticketplus.com.tw/*",
      "*://*.fami.life/*",
      "*://*.tix.wdragons.com/*",
      "*://*.tix.ctbcsports.com/*",
      "*://*.tix.fubonbraves.com/*",
      "*://*.jkface.net/*",
      "*://*.kham.com.tw/*",
      "*://*.tixcraftweb-pcox.onrender.com/*"
    ]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
  }
} 